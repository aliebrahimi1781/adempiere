<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ad="urn:import:org.eevolution.ui.gwt.client.widget"
	xmlns:adc="urn:import:org.eevolution.ui.gwt.client.component">
		<ui:style>
		.FindView{
			padding: 10px;
		}
		.leftPanel{
			text-align: left;
			position: absolute;
		}
		.rigthPanel{
			text-align: right;
		}
	</ui:style>

	<g:VerticalPanel height='500px' width='500px'>
		<g:cell height = '15%' width='100%'>
			<g:HorizontalPanel width='100%' height='100%'>
				<ad:ListBox ui:field='workflowList'/>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell height = '70%' width ='100%' >
			<g:AbsolutePanel ui:field='panel' height ='100%' width='100%'/>
		</g:cell>
		<g:cell height='15%' width='100%'>
			<g:HorizontalPanel height='100%' width='100%'>
				<adc:ConfirmPanel ui:field='confirmPanel'
					withCancelButton='true' withHelpButton='false' withRefreshButton='false'
					withResetButton='false' withCustomizeButton='false'
					withHistoryButton='false' withZoomButton='false'/>
			</g:HorizontalPanel>
		</g:cell>
	</g:VerticalPanel>
			
</ui:UiBinder> 