<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:ad="urn:import:org.eevolution.ui.gwt.client.widget">
	<ui:style>
		.StatusBarPanel{
			padding: 10px;
		}
		.leftPanel{
			text-align: left;
			position: absolute;
		}
		.rigthPanel{
			text-align: right;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.StatusBarPanel}">
		<div class="{style.leftPanel}">
			<ad:Label ui:field='statusLine'/>
				
		</div>
		<div class="{style.rigthPanel}">
			<ad:Label ui:field='infoLine'/>
			<ad:Label ui:field='statusDB'/>		
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 