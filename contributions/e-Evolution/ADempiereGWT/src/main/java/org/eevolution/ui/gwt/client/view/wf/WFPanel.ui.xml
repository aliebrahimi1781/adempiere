<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ad="urn:import:org.eevolution.ui.gwt.client.widget"
	xmlns:adc="urn:import:org.eevolution.ui.gwt.client.component">
		<ui:style>
		.FindView{
			padding: 10px;
		}
		.leftPanel{
			text-align: left;
			position: absolute;
		}
		.rigthPanel{
			text-align: right;
		}
	</ui:style>
	<g:DecoratorPanel>
		<g:HorizontalPanel height='500px' width='500px'>
			<g:cell height='20%' width='100%'>
				<g:HorizontalPanel width = '100%' height='100%'/>
			</g:cell>
			<g:cell height='60%' width='100%'>
				<g:HorizontalPanel ui:field='contentPanel' width = '100%' height='100%'>
					<g:AbsolutePanel ui:field='panel' width='100%' height='100%'/>
				</g:HorizontalPanel>
			</g:cell>
			<g:cell height ='20%' width ='100%'>
				<g:HorizontalPanel ui:field='infoTextPane' width = '100%' height='100%'>
					<ad:Label ui:field='message' />
				</g:HorizontalPanel>
			</g:cell>
		</g:HorizontalPanel>
	</g:DecoratorPanel>
</ui:UiBinder> 