<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		@sprite .appLogo {
			gwt-image: 'logo';
			margin-left: 44%;
			margin-top: 22%;
		}
	</ui:style>
	<ui:image field='logo' src='../resources/AdempiereLogo.png' />

	<g:TabLayoutPanel barUnit='EM' barHeight='2' ui:field='tabs'>
		<g:tab>
			<g:header>Adempiere</g:header>
			<g:VerticalPanel width="100%" height="100%">
				<g:HTMLPanel>
					<div class='{style.appLogo}' />
				</g:HTMLPanel>
			</g:VerticalPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 