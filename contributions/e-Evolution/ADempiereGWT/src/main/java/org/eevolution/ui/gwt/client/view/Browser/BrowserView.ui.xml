<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:ad="urn:import:org.eevolution.ui.gwt.client.widget"
	xmlns:adc="urn:import:org.eevolution.ui.gwt.client.component">
	<ui:style>

	</ui:style>
	
	
	
	
	<g:VerticalPanel height='600px' width='800px'>
		<g:cell height = '3%' width = '100%'>
			<g:HorizontalPanel ui:field='toolsBar'>
				<g:cell>
					<ad:ToggleButton ui:field='bPrint'/>
				</g:cell>
				<g:cell >
					<ad:ToggleButton ui:field='bZoom'/>
				</g:cell>
				<g:cell >
					<ad:ToggleButton ui:field='bExport'/>
				</g:cell>
				<g:cell>
					<ad:ToggleButton ui:field='bDelete'/>
				</g:cell>
				<g:cell >
					<ad:ToggleButton ui:field='bFind'/>
				</g:cell>
			</g:HorizontalPanel>
		</g:cell>
		<g:cell height = '97%' width = '100%'>
			<g:HorizontalPanel height = '100%' width='100%'>
				<g:TabLayoutPanel ui:field='tabsPanel' barUnit='PX' barHeight='40' width='100%' height='100%'>
					<g:tab>
						<g:header>Search</g:header>
						<g:VerticalPanel width='100%' height='100%'>
								<g:cell height = '15%' width = '100%'>
									<g:VerticalPanel>
										<g:cell height = '30%' width = '100%'>
											<g:VerticalPanel ui:field='searchPanel'  height = '100%' width = '100%'>
												<!-- Components must be added here -->
											</g:VerticalPanel>
										</g:cell>
										<g:cell width = '100%' height = '30%' horizontalAlignment='ALIGN_RIGHT'>
											<ad:Button ui:field='bSearch'/>
										</g:cell>
									</g:VerticalPanel>
									
								
								</g:cell>
								<g:cell height = '80%' width='100%'>
									<g:HorizontalPanel height = '100%' width ='100%'>
										<!-- Table must be here!!! -->
										
									</g:HorizontalPanel>
								</g:cell>
								<g:cell>
									<g:VerticalPanel ui:field='parameterPanel'>
										<!-- Parameter Components must be added here! -->
									</g:VerticalPanel>
								</g:cell>
								<g:cell height = '5%' width = '100%' horizontalAlignment='ALIGN_RIGHT'>
									<g:HorizontalPanel>
										<g:cell>
											<ad:Button ui:field='bCancel'/>
										</g:cell>
										<g:cell>
											<ad:Button ui:field='bOk'/>
										</g:cell>
									</g:HorizontalPanel>
								</g:cell>
						</g:VerticalPanel>
					</g:tab>
					<g:tab>
						<g:header>Graph</g:header>
						<g:VerticalPanel ui:field ='graphPanel' width='100%' height='100%'>
							<!-- Graph must be here!!! -->
						</g:VerticalPanel>
					</g:tab>
				</g:TabLayoutPanel>
			</g:HorizontalPanel>
		</g:cell>
		
	
	</g:VerticalPanel>
</ui:UiBinder> 